@model WritingPlatform.Models.Users.UserModel

<form action="/user/UpdateUser" method="get">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-horizontal">
        <label class="control-label">Login</label>
        <input value="@Model.Login" type="text" name="Login" />
    </div>
    <div class="form-horizontal">
        <label class="control-label">Password</label>
        <input value="@Model.Password" type="text" name="Password" />
    </div>
    <div class="form-horizontal">
        <label class="control-label">Email</label>
        <input value="@Model.Email" type="text" name="Email" />
    </div>
    <input value="Save" type="submit" class="btn btn-default" />
</form>
<form action="/user/DeleteAccount" method="get">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input value="Delete account" style="margin:0px,5px,0px 5px" type="submit" class="btn btn-default" />
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
