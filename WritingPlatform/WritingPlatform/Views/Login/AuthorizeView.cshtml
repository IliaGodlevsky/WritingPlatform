@{
    ViewBag.Title = "Authorization form";
}

<h2>@ViewBag.Title</h2>

<div>
    <form action="/login/Authorize" method="get">
        <p><text style="margin: 5px">Login:</text></p>
        <p><input style="margin: 5px" name="login" type="text"/></p>
        <p><text>Password:</text></p>
        <p><input style="margin: 5px" name="password" type="password"/></p>
        <p><input style="margin: 5px" type="submit" value="Authorize"/></p>
    </form>
</div>