@using WritingPlatform.Models;

@model IEnumerable<BestWorkModel>

<h1>All users</h1>
<table class="table table-striped">
    <tr class="info">
        <th>Name</th>
        <th>Genre</th>
        <th>Text</th>
        <th>Rating</th>
        <th>Author</th>
        <th>Comments</th>
    </tr>
    @foreach (var work in Model)
    {
        <tr>
            <td>@work.Name</td>
            <td>@work.Genre</td>
            <td>@work.TextOfWork</td>
            <td>@work.Rating</td>
            <td>@work.Author.Name</td>
            <td>
                    <form action="/Home/ShowComments" method="post">
                        <input type="hidden" value="@work.Comments" name="comments" />
                        <input type="submit" value="Watch"/>
                    </form>
            </td>
        </tr>
    }
</table>